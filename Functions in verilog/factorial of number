
module tb;
  reg [3:0] num ;   //input 
  reg [31:0] result;  //output
  
  
  function  integer fact;
    input [3:0] n;
    begin 
      if(n>1)
        fact = n*fact(n-1);
      else 
        fact =1;
    end
  endfunction
    
  
  initial begin
    num = 4'd5;
    result = fact(num);
    $display("factorial of %0d = %0d" , num , result);
  end
  
endmodule
