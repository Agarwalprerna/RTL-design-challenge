module tb;
  
   integer num;
   reg result;  //for return value 
  
 
  
  function automatic integer prime ;
    input integer n;
    integer i , count;
    count =0;
    begin
      
    if(n<=1)
      prime =0;
    else begin
      for(i=2; i<n ; i=i+1) begin
        if ( n%i ==0) 
          count = count +1;
      
      end
    end
    end
    if(count == 0)
      prime = 1;
    else 
      prime  =0;
      
  endfunction
  
  
 initial begin
   num =4;
   result = prime(num);
   
   if(result ==1)
     $display("%0d is a prime number" , num);
   else 
     $display("%0d is not a prime number" , num);
   
 end
endmodule
